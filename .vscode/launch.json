    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run main.py",
            "type": "python",
            "request": "launch",
            "module": "src.main",
            "python": "${workspaceFolder}/venv/bin/python",
            "console": "integratedTerminal"
        },
        {
            "name": "Run unit tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-m", "unit"
            ],
            "python": "${workspaceFolder}/venv/bin/python",
            "console": "integratedTerminal"
        }
    ]
}
